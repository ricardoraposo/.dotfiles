{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "enabled_providers": [
    "anthropic",
    "opencode"
  ],
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp"
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "enabled": false
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://192.168.0.201:3845/mcp",
      "enabled": false
    },
    "sonarqube": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_ORG",
        "mcp/sonarqube"
      ],
      "environment": {
        "SONARQUBE_TOKEN": "{env:SONARQUBE_TOKEN}",
        "SONARQUBE_ORG": "{env:SONARQUBE_ORG}"
      },
      "enabled": false
    },
    "mysql": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@arvoretech/mysql-mcp"
      ],
      "environment": {
        "MYSQL_HOST": "{env:MYSQL_HOST}",
        "MYSQL_USER": "{env:MYSQL_USER}",
        "MYSQL_PASSWORD": "{env:MYSQL_PASSWORD}",
        "MYSQL_DATABASE": "{env:MYSQL_DATABASE}",
        "MYSQL_PORT": "{env:MYSQL_PORT}"
      }
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide"
      ]
    }
  }
}
