{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "enabled_providers": [
    "anthropic",
    "opencode"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp"
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp",
      "enabled": false
    },
    "figma-desktop": {
      "type": "remote",
      "url": "http://192.168.0.51:3845/mcp",
      "enabled": false
    },
    "sonarqube": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_ORG",
        "mcp/sonarqube"
      ],
      "environment": {
        "SONARQUBE_TOKEN": "{env:SONARQUBE_TOKEN}",
        "SONARQUBE_ORG": "{env:SONARQUBE_ORG}"
      },
      "enabled": false
    }
  }
}
