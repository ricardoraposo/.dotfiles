{
  "editor.fontSize": 12,
  "editor.fontLigatures": false,
  "editor.accessibilitySupport": "off",
  "editor.rulers": [80],
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "terminal.integrated.fontSize": 15,
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "none",
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Dark Modern",
  "window.autoDetectColorScheme": true,
  "vim.smartRelativeLine": false,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [" ", " "],
      "after": ["<C-^>"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "j"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["g", "k"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["shift+k"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["s"],
      "commands": ["leap.search"]
    },
    {
      "before": ["S"],
      "commands": ["leap.findBackward"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": "<C-c>",
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-c>"],
      "after": ["<Esc>"]
    }
  ],
  "remote.autoForwardPortsSource": "hybrid",
  "gitlens.advanced.messages": {
    "suppressIntegrationRequestTimedOutWarning": true
  },
  "remote.SSH.remotePlatform": {
    "arvore": "linux"
  },
  "git.confirmSync": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[elixir]": {
    "editor.defaultFormatter": "lexical-lsp.lexical",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Default Light Modern",
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.experimental.useTsgo": false,
  "editor.fontFamily": "Monaco"
  // "elixirLS.dialyzerEnabled": true,
  // "elixirLS.fetchDeps": true,
}
