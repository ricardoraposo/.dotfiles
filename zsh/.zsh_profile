fd(){
  DIR=$(find -L ~/.config ~/Projects ~/Projects/Repos ~/Projects/Repos/trybe ~/Projects/Study ~/Projects/Study/trybe -mindepth 1 -maxdepth 1 -type d |\
    fzf --margin 15% --border=rounded \
    --preview 'exa -1 {}' --color bg+:-1) && cd $DIR
}

c() {
  DIR=$(find -L ~/.config ~/Projects ~/Projects/Repos \
    ~/Projects/Repos/trybe ~/Projects/Study ~/Projects/Study/trybe \
    -mindepth 1 -maxdepth 2 -type d | fzf -f $1 | head -1)
  [[ ! -z $DIR ]] && cd $DIR
}

alias v="nvim"
alias vim="nvim"
# terminal commands aliases
alias sc="cd $SCRIPTS"
alias dot="cd $HOME/.dotfiles"
alias zf="cd $NOTES"
alias so="source ~/.zshrc"
alias cat="bat"
alias chmox="chmod +x"
alias ls="exa -lh"
alias "?"="tia"

#tmux aliases
alias tm="tmux new -A -s ricardo"
alias tc="tmux new -A -s class"
alias tk="tmux kill-server"

# npm aliases
alias cy="npm run cy"
alias li="npm run lint"
alias t="npm run test"
alias d="npm run dev"

# podman aliases
