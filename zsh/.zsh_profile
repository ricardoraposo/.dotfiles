fd(){
  DIR=$(find ~/.config ~/Projects ~/Projects/Repos ~/Projects/Repos/trybe ~/Projects/Study ~/Projects/Study/trybe ~/Projects/Study/csharp -mindepth 1 -maxdepth 1 -type d | fzf) && cd $DIR
}

sf(){
  FILE=$(find ~/Projects/Repos -type f | grep -v "node_modules" | grep -v ".git" | fzf) && nvim $FILE
}

alias t="env TERM=screen-256color tmux"
alias tk="tmux kill-server"
alias ls="exa -l"
alias v="nvim"

bindkey ^E forward-word
bindkey ^B backward-word
bindkey ^K kill-word
bindkey -s ^V "v .^M"
bindkey -s ^A "t attach^M"
bindkey -s ^U "cd ~/.config/nvim^M"
bindkey -s ^F "fd^M"
# bindkey -s ^T "~/.local/bin/tmux_sessionizer.sh^M"
