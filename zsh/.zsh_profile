fd(){
  DIR= `find ~/.config ~/Project ~/Project/Repos ~/Project/Study ~/ -mindepth 1 -maxdepth 1 -type d | fzf` && cd "$DIR"
}

if [[ "$OSTYPE" == "linux-gnu"* ]]; then

    export PATH=/usr/local/lib/nodejs/node-v16.17.0-linux-x64/bin:$PATH
    export GOPATH=$HOME/go
    export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
elif [[  "$OSTYPE" == "darwin"* ]]; then

    export GOPATH="/Users/ricardo/go"
    export PATH="$PATH:$(go env GOPATH)/bin"

    alias love="/Applications/love.app/Contents/MacOS/love"
fi


alias t="env TERM=screen-256color tmux"
alias v="nvim"
alias k="v ~/.config/kitty/kitty.conf"

bindkey ^E forward-word
bindkey ^B backward-word
bindkey ^K kill-word

bindkey -s ^V "v .^M"
bindkey -s ^A "t attach^M"
bindkey -s ^U "cd ~/.config/nvim^M"
bindkey -s ^F "fd^M"
# bindkey -s ^F "~/.config/tmux/tmux_sessionizer.sh^M"

alias work="timer 60m && terminal-notifier -message 'Pomodoro'\
        -title 'Work Timer is up! Take a Break ðŸ˜Š'\
        -appIcon '~/Pictures/pumpkin.png'\
