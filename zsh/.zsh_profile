fd(){
  DIR=$(find ~/.config ~/Projects ~/Projects/Repos ~/Projects/Repos/trybe ~/Projects/Study ~/Projects/Study/trybe  -mindepth 1 -maxdepth 1 -type d | fzf) && cd $DIR
}

ntmux(){
  NAME=$(basename $PWD) && tmux new -s $NAME
}

