fd(){
  DIR=$(find ~/.config ~/Projects ~/Projects/Repos ~/Projects/Repos/trybe ~/Projects/Study ~/Projects/Study/trybe  -mindepth 1 -maxdepth 1 -type d | fzf) && cd $DIR
}

ntmux(){
  NAME=$(basename $PWD) && tmux new -s $NAME
}

alias v='nvim'
# terminal commands aliases
alias sc='cd $HOME/.dotfiles/scripts'
alias dot='cd $HOME/.dotfiles'
alias zf='cd $HOME/Documents/zet'
alias ls='exa -l'
alias chmox='chmod +x'

#tmux aliases
alias tm="ntmux"
alias tk='tmux kill-server'
alias ta='tmux attach'

# npm aliases
alias t='npm run test'
alias d='npm run dev'

# git aliases
alias gwa='git worktree add'
alias gwr='git worktree remove'
alias gwl='git worktree list'

# podman aliases
alias pa='podman start -a'
alias pr='podman run -it --hostname rickysthing --name rickyc'
alias prws='podman run -it --hostname rickysubu --name rickyc ghcr.io/ricardoraposo/ricky-workspace'

bindkey ^E forward-word
bindkey ^B backward-word
bindkey ^K kill-word
bindkey -s ^V "v .^M"
bindkey -s ^A "tmux attach^M"
bindkey -s ^U "cd ~/.config/nvim^M"
bindkey -s ^F "fd^M"
