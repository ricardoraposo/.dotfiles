alias tm="ntmux"
alias tk='tmux kill-server'
alias ta='tmux attach'
alias t='npm run test'
alias d='npm run dev'
alias ls='exa -l'
alias v='nvim'
alias zf='cd $HOME/Documents/zet'
alias chmox='chmod +x'
alias sc='cd $HOME/.dotfiles/scripts'
alias dot='cd $HOME/.dotfiles'

bindkey ^E forward-word
bindkey ^B backward-word
bindkey ^K kill-word
bindkey -s ^V "v .^M"
bindkey -s ^A "t attach^M"
bindkey -s ^U "cd ~/.config/nvim^M"
bindkey -s ^F "fd^M"
