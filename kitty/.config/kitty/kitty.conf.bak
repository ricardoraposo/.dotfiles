# font shit
font_family        Monaco
font_size          14.5

# Cursor shit and stuff I have no idea of what it does 
cursor_shape     block
shell_integration no-cursor
cursor_blink_interval     0.0
scrollback_lines 2000
scrollback_pager less +G -R
wheel_scroll_multiplier 5.0
click_interval 0.5
select_by_word_characters :@-./_~?&=%+#
mouse_hide_wait 3
enabled_layouts *
repaint_delay    10
input_delay 3
background_opacity 1

# Visual bell shit
visual_bell_duration 0.0
enable_audio_bell no

# Url shit
open_url_modifiers cmd
open_url_with google-chrome

# no idea of what this does
term xterm-kitty

# tab shit
tab_bar_style separator

#keymap shit - overall
map ctrl+,              load_config_file

# keymap shit - mac
map cmd+v               paste_from_clipboard
map cmd+c               copy_to_clipboard
map cmd+k               next_tab
map cmd+shift+k         move_tab_forward
map cmd+j               previous_tab
map cmd+shift+j         move_tab_backward 
map cmd+t               new_tab_with_cwd
map cmd+w               close_tab
map cmd+=               increase_font_size
map cmd+-               decrease_font_size
map cmd+backspace       restore_font_size
map cmd+1               select_tab

# keymap shit - linux
map alt+v               paste_from_clipboard
map alt+c               copy_to_clipboard
map alt+k               next_tab
map alt+shift+k         move_tab_forward
map alt+j               previous_tab
map alt+shift+j         move_tab_backward 
map alt+t               new_tab_with_cwd
map alt+w               close_tab
map alt+=               increase_font_size
map alt+-               decrease_font_size
map alt+backspace       restore_font_size

# macos shit
hide_window_decorations yes
confirm_os_window_close 0
macos_option_as_alt no
# macos_titlebar_color background
allow_remote_control yes

# color shit
background #1d2021
foreground #d9d7ce
cursor #ffcc66
selection_background #343f4c
